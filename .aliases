#
## ALIASES (including bash complete)
#

# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
alias zshconfig="subl ~/.zshrc"
alias ohmyzsh="subl ~/.oh-my-zsh"

# Dotfiles shortcut
alias dotfiles="cd ~/Development/personal/dotfiles"

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# List all files colorized in long format
alias l="ls -lF --color"

# List all files colorized in long format, including dot files
alias la="ls -laF --color"

# List only directories
alias lsd="ls -lF --color | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls --color"
export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# Enable aliases to be sudo'ed
alias sudo='sudo '

# Alias xdg-open
alias open="xdg-open"

# Get week number
alias week='date +%V'

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# IP addresses
# alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Canonical hex dump; some systems have this symlinked
command -v hd > /dev/null || alias hd="hexdump -C"

# Trim new lines and copy to clipboard
alias c="tr -d '\n' | pbcopy"

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'


# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
	alias "$method"="lwp-request -m '$method'"
done

# Make Grunt print stack traces by default
command -v grunt > /dev/null && alias grunt="grunt --stack"

# Move export GREP_OPTIONS="--color=auto" (which is deprecated) from .exports to .alias
# https://github.com/mathiasbynens/dotfiles/issues/467
# Always enable colored `grep` output`
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

### ADDITIONS

# Mimic pbcopy/pbpaste
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xsel --clipboard --output'

# Untar to current directory
alias untar='tar --strip-components=1 -zxvf'

# git aliases
alias pushit='git push -u origin $(git symbolic-ref --short -q HEAD)'
alias pullit='git pull -r origin'
alias gitit='pullit && pushit'
alias recent='git branch --sort=-committerdate'

# Platform aliases
# alias p='platform'
# alias pd='platform drush'
# alias pdc='platform drush cc'
# alias pda='platform drush cc all'
# alias pdb='platform drush bb'
# alias pde='git commit --allow-empty -m "force redeploy" && git push platform'
# alias gpp='git push origin && git push platform'

# Add tab completion for `defaults read|write NSGlobalDomain`
# You could just use `-g` instead, but I like being explicit
complete -W "NSGlobalDomain" defaults;

# easier to remember alias for viewing OS version, build, kernel etc., stored in
# clipboard. Appended by ZSH version (screen only)
alias os='cat /etc/os-release|pbcopy && pbpaste && zsh --version'
alias osinfo='os'
# related alias to get system information
alias sys='inxi -Fxxxrz|pbcopy && pbpaste'
alias sysinfo='sys'
# available free space on primary disk
alias freespace='sysinfo | grep "Partition: ID-1"'

# Easier-to-remember aliases to kill processes
# search-kill
alias skill="procsearch"
# kill-kill
alias kkill="kill -9"

# Reload zsh
# https://github.com/driesvints/dotfiles/blob/main/aliases.zsh
alias reloadz="exec zsh"

# Copy zsh dotfiles (assuming current directory) and reload
alias copyz="dotfiles && cp .zshrc $HOME && cp .aliases $HOME && cp .exports $HOME && cp .functions $HOME && exec zsh"

# remind me what the webp conversion tools are
alias webp="echo 'Did you mean \"webpjpg\" (convert to JPG), \"dwebp\" (decode) or \"cwebp\" (encode)?'"

# Give shrinkpdf.sh a similar name to image/video minification functions
alias minpdf="shrinkpdf.sh"

# Give convertvid.sh an alias to save THREE CHARACTERS
alias convertvid="convertvid.sh"

# I can never remember the name of "carbon"; this is more like "screenshot"
alias scs="carbon-now"

# Same deal with Peek...
alias gif="peek"

# Temporary project shortcuts
alias rootwork="cd ~/Development/personal/rootwork.org"
alias premail="cd ~/Development/premail/premail"
alias signoff="cd ~/Development/premail/mjml-signoff"
alias bulletlist="cd ~/Development/premail/mjml-bullet-list"
alias copysign="rm -rf ./node_modules/mjml-signoff && rsync --recursive --exclude '.git' --exclude 'node_modules' ~/Development/premail/mjml-signoff node_modules"
alias copylist="rm -rf ./node_modules/mjml-signoff && rsync --recursive --exclude '.git' --exclude 'node_modules' ~/Development/premail/mjml-bullet-list node_modules"
